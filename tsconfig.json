{
  "compilerOptions": {
    /* Project structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Target environment */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "types": ["node"],

    /* Build outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Misc */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Helpful for VS Code auto-imports */
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
